<script>
// ----------------- –ò–ì–†–û–í–ê–Ø –õ–û–ì–ò–ö–ê -----------------

function enterRoom(room){
    let desc = "";
    switch(room){
        case 'library':
            desc = "–í—ã –≤–æ—à–ª–∏ –≤ –±–∏–±–ª–∏–æ—Ç–µ–∫—É. –ü—ã–ª—å–Ω—ã–µ —Å—Ç–µ–ª–ª–∞–∂–∏ –∏ —Å—Ç–∞—Ä—ã–µ –∫–Ω–∏–≥–∏. –û–¥–∏–Ω —Å—Ç–µ–ª–ª–∞–∂ –º–æ–∂–Ω–æ —Å–¥–≤–∏–Ω—É—Ç—å.";
            playDoor();
            break;
        case 'music':
            desc = "–ú—É–∑—ã–∫–∞–ª—å–Ω–∞—è –∫–æ–º–Ω–∞—Ç–∞. –ù–∞ –ø–æ–ª—É —Å—Ç—Ä–∞–Ω–Ω—ã–µ —Å–ª–µ–¥—ã, –±—É–¥—Ç–æ –∫—Ç–æ-—Ç–æ –≤–æ–ª–æ–∫ —Ç—è–∂—ë–ª—ã–π –ø—Ä–µ–¥–º–µ—Ç.";
            playDoor();
            break;
        case 'office':
            desc = "–ö–∞–±–∏–Ω–µ—Ç —É–±–∏—Ç–æ–≥–æ. –î–≤–µ—Ä—å –∑–∞–ø–µ—Ä—Ç–∞ –∏–∑–Ω—É—Ç—Ä–∏, –æ–∫–Ω–æ –ø—Ä–∏–æ—Ç–∫—Ä—ã—Ç–æ –≤—ã—Å–æ–∫–æ.";
            playDoor();
            break;
        case 'garden':
            desc = "–°–∞–¥ –∑–∞ –æ—Å–æ–±–Ω—è–∫–æ–º. –°–ª–µ–¥—ã –æ–±—É–≤–∏, –æ–±–ª–æ–º–∞–Ω–Ω–∞—è –≤–µ—Ç–∫–∞, —Å–ª–µ–¥ –æ—Ç –∫–æ–ª—å—Ü–∞ –≤ –∑–µ–º–ª–µ.";
            break;
        case 'basement':
            desc = "–ü–æ–¥–≤–∞–ª –≤–µ–¥—ë—Ç –∫ —Å—Ç–∞—Ä–æ–π –∫–æ–º–Ω–∞—Ç–µ —Å–ª—É–≥. –ù–∞ –ø–æ–ª—É –ª–µ–∂–∏—Ç —Å—Ç–∞—Ä–∞—è –∫–∞—Ä—Ç–∞.";
            playMechanism();
            break;
    }
    document.getElementById("roomDesc").innerHTML = desc;
}

// ----------------- –£–ª–∏–∫–∏ -----------------
function openClue(n){
    document.getElementById("clue"+n).style.display="block";
    playWhisper();
    if(n===1 || n===2 || n===3) playDoor();
    if(n===5) playMechanism();
}

// ----------------- –§–∏–Ω–∞–ª -----------------
function checkKiller(){
    alert("–ò—Å—Ç–∏–Ω–Ω–∞—è —É–±–∏–π—Ü–∞ ‚Äî –õ–µ–¥–∏ –í–∏–≤—å–µ–Ω –†–æ—É–∑–≤—É–¥. –û–Ω–∞ –∑–Ω–∞–ª–∞ –æ —Ç–∞–π–Ω–æ–º —Ö–æ–¥–µ –∏ –ø–æ–¥—Å—Ç—Ä–æ–∏–ª–∞ —É–ª–∏–∫–∏ —Ç–∞–∫, —á—Ç–æ–±—ã –æ–±–≤–∏–Ω–∏—Ç—å –¥—Ä—É–≥–∏—Ö. –ü—Ä–∏—á–∏–Ω–∞: –≠–¥—Ä–∏–∞–Ω —Å–æ–±–∏—Ä–∞–ª—Å—è –ª–∏—à–∏—Ç—å –µ—ë –Ω–∞—Å–ª–µ–¥—Å—Ç–≤–∞.");
    startHeartbeat();
}

// ----------------- –ó–í–£–ö–û–í–ê–Ø –°–ò–°–¢–ï–ú–ê -----------------
let bgAudio = document.getElementById("bgAudio");
let whisperAudio = document.getElementById("whisperAudio");
let doorAudio = document.getElementById("doorAudio");
let mechanismAudio = document.getElementById("mechanismAudio");
let heartbeatAudio = document.getElementById("heartbeatAudio");

let toggle = document.getElementById("audioToggle");
let audioEnabled = false;

toggle.addEventListener("click", ()=>{
    if(!audioEnabled){
        bgAudio.volume = 0.35; bgAudio.play();
        audioEnabled = true;
        toggle.innerHTML = "üîá –í—ã–∫–ª—é—á–∏—Ç—å –∑–≤—É–∫";
        toggle.style.background = "#7a4e2f";
    } else {
        bgAudio.pause(); heartbeatAudio.pause();
        audioEnabled = false;
        toggle.innerHTML = "üéµ –í–∫–ª—é—á–∏—Ç—å –∑–≤—É–∫";
        toggle.style.background = "#b08a5c";
    }
});

function playWhisper(){ whisperAudio.volume=0.4; whisperAudio.currentTime=0; whisperAudio.play(); }
function playDoor(){ doorAudio.volume=0.6; doorAudio.currentTime=0; doorAudio.play(); }
function playMechanism(){ mechanismAudio.volume=0.6; mechanismAudio.currentTime=0; mechanismAudio.play(); }
function startHeartbeat(){ if(audioEnabled){ heartbeatAudio.volume=0.5; heartbeatAudio.play(); } }

</script>
